<%= form_for([@task, @tactivity]) do |f| %>
  <% if @tactivity.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@tactivity.errors.count, "error") %> prohibited this tactivity from being saved:</h2>

      <ul>
      <% @tactivity.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group ">
    <%= f.label :name %><br>
    <%= f.text_field :name , class: 'form-control'%>
  </div>
  <div class="form-group">
    <%= f.label :description %><br>
    <%= f.text_area :description , class: 'form-control'%>
  </div>
  <div class="form-group">
    <%= f.label :start_date %><br>
    <%= f.date_field :start_date, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :hours %><br>
    <%= f.number_field :hours ,:class => 'text_field form-control', :step => 'any'%>
  </div>
  <div class="actions">
    <%= f.submit "create Activity", class: 'btn btn-primary' %>
  </div>
<% end %>